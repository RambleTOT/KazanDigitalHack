<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/text_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_card" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <TextView
            android:id="@+id/name_ground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mont_bold"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="Сходка Артема Сокерина"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/mont_semibold"
            android:gravity="start"
            android:lineSpacingExtra="5dp"
            android:text="12 августа· 18:00 · Геологическая 8 · +12"
            android:textColor="@color/color_text_description_83"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/about_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/mont_bold"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="О мероприятии"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/mont_semibold"
            android:gravity="start"
            android:lineSpacingExtra="5dp"
            android:text="В настоящее время коллектив «Московский цирк на льду» под руководством Наталии Абрамовой Московского цирка Никулина на Цветном бульваре — коллектив молодых, красивых, и высокопрофессиональных артистов. Бережно сохраняя лучшие традиции"
            android:textColor="@color/color_text_description_83"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <Button
            android:id="@+id/button_create_routes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/mont_semibold"
            android:includeFontPadding="false"
            android:lineSpacingExtra="4sp"
            android:paddingHorizontal="31dp"
            android:paddingVertical="25dp"
            android:text="@string/create_routes"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_main"
            android:fontFamily="@font/mont_semibold"
            android:includeFontPadding="false"
            android:lineSpacingExtra="4sp"
            android:paddingHorizontal="31dp"
            android:paddingVertical="25dp"
            android:text="Купить билет"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            app:cornerRadius="50dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>